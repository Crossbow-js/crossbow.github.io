<header class="wrapper site-header" role="banner">
    <div class="container">
        <nav class="site-nav">
            <ul class="site-nav__items">
                <li class="site-nav__item site-nav__item--logo">
                    <a href="/" class="site-nav__link logo">
                        {{inc src="public/img/logo.svg"}}
                    </a>
                </li>
                <li class="site-nav__item site-nav__item--text">
                    <a href="{{$$.site.nav.docs.url}}" class="site-nav__link site-nav__link--text">Documentation</a>
                </li>
                <li class="site-nav__item site-nav__item--icons">
                    <a href="{{$$.site.links.github}}" class="site-nav__link site-nav__link--icon" title="Crossbow on Github">
                        {{inc src="icon.hbs" icon="github"}}
                    </a>
                    <a href="https://twitter.com/crossbow-js" class="site-nav__link site-nav__link--icon" title="@Browsersync on Twitter">
                        {{inc src="icon.hbs" icon="twitter"}}
                    </a>
                </li>
            </ul>
        </nav>
        <div class="site-header__content">
            <div class="hero">
                <h2 class="hero__title">Finally, a task runner done right!</h2>
                <h3 class="hero__summary">Uniting the ecosytem of front-end tooling</h3>
                <div class="hero__content">
                    {{hl src="snippets/hero.js"}}
                </div>
                <div class="hero__cta">
                    <a href="#get-started" class="hero__cta__link">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</header>
